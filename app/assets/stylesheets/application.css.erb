 /* MAIN CSS */
 body {font-family: 'lato' !important;}

/* MENU -- NAVIGATION */
 .navbar {
 	background: #3e90d6 !important;
 	color:#fff;
 	font-family: 'lato';
 }
 .navbar .navbar-nav a {
 	color:#fff;
 	text-transform:uppercase;
    font-size: .8rem;
 }
 .navbar-brand {
 	font-weight:bold;
 	color:#fff;
 	text-transform: inherit;
 }

 /* CSS for CALCULATOR PAGE */
 .food-hero {
 	background-image: url(<%= asset_path 'foodcalc-hero-bg.jpg' %>);
  background-size: cover;
  padding: 110px 0 188px 0;
  background-position: center center;
 }
 .food-hero h1 {
  font-weight: 900;
  color: #fff;
  text-align: center;
  font-size: 5rem;
  letter-spacing: 1px;
 }
 .food-hero h2 {
  font-weight: 100;
  font-size: 1.2rem;
  text-transform: uppercase;
  letter-spacing: 4px;
  color: #fff;
  text-align: center;
 }
 .final-price {
  display: block;
  font-size: 3rem;
  color: #3ea754;
  text-align:center;
 }
 .final-price span {
  font-size: 6rem;
  font-weight:bold;
 }
 .final-price div{
  display: inline-block;
  top: -28px;
  position: relative;
  margin-left: -12px;
 }
 .final-price button {
    display: block;
  text-align: center;
  margin: 0 auto;
  border: none;
  background: none;
  font-size: 1rem;
  font-weight: 900;
  border: 3px solid #3ea754;
  padding: 10px 20px;
  color: #3ea754;
 }
 .party-size {display:block !important;}
 .party-size, .party-size span {
  font-size: 1rem ;
  text-align: center;
 }
 .start-over {
  color:#333;
  font-size: 1rem;
  text-transform:uppercase;
  text-decoration:none;
 }
 .start-over:hover {
  text-decoration:none;
 }
 .party-intro {
 	max-width: 238px;
  display: block;
  margin: 0 auto;
  text-align: center;
  background: #fff;
  margin-top: -140px;
  padding: 31px;
  border-radius: 7px;
  box-shadow: 1px 1px 20px #3333331a;
 }
 .party-intro h2 {
    margin-bottom: -27px;
    z-index: 999999;
    position: relative;
    font-size: 1.4rem;
    text-transform: uppercase;
 }
 .food {
 	padding-top:40px;
  padding-bottom: 40px;
  background: #efefef59;
  margin-top: 32px; 
 }
 .food .col-md-4 {
  text-align:center;
 }
 .food .col-md-4 h3 {
    border-bottom: 1px solid #efefef;
    padding-bottom: 16px;
 }
 .calc-intro {
 	text-align:center;
 }
 .people-slider-number {
 	position:relative;
 	margin-left:-1px;
 }
 .people-icon {
  font-size: 1.5rem;
  position: absolute;
  left: -73px;
  top: 8px;
  color: #3e90d6;
  right: 0;
  margin: 0 auto;
 }

.food-item {
  width: 100%;
  height: 70px;
  display: inline-block;
  line-height: 23px;
  text-align: center;
  transition: all ease .5s;
  box-shadow: 0px 0px 13px #3333330a;
  margin: 10px;
  padding: 10px;
  background: #fff;
}
.food-item-active {
	background:#3e90d6;
  color:#fff;
}
.food-name {
  box-sizing: border-box;
  font-weight: 600;
  text-transform: uppercase;
}
.next-section {
  display: block;
  text-align: center;
  margin-top: 46px;
  font-size: 2rem;
  color: #cee3f5;
}

#range {
  width: 180px;
  height: 4px;
  border: 0;
  border-radius: 100px;
  background: rgba(0,0,0,0.2);
  outline: none;
}
#range .ui-slider-handle {
  position: absolute;
  margin: -6px 0 0 -17px;
  border-radius: 100px;
  background: #3e90d6;
  color: #3e90d6;
  border: 0;
  height: 20px;
  line-height: 20px;
  text-align: center;
  width: 34px;
  outline: none;
  cursor: pointer;
  font-size: 8px;
  font-weight: 800;
  text-decoration: none;
  transition: transform 0.1s ease;
}
#range .ui-slider-handle:hover,
#range .ui-slider-handle:focus {
  transform: scale(1.1);
}
#range .ui-slider-range {
  background: #69b6b5;
}
.cntr {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.range-slider {
	position: relative;
    display: block;
    top: 0;
    margin-bottom: 40px;
}
.ui-slider-handle {
    font-size: 4rem;
    font-weight: bold;
    letter-spacing: -4px;
  	color: #3e90d6;
}

/* PLUS MINUS PEOPLE */
#PeopleQTY {
  position:relative;
  margin-bottom: -28px;
}
.qty {
    text-align: center;
    width: 100%;
    border: none;
    font-size: 8rem;
    color: #3d90d7;
}
.qtyminus {
    position: absolute;
    left: -49px;
    right: auto;
    top: 41%;
    border: 2px solid #3d90d8;
    box-shadow: 0px 0px 6px #33333338;
    border-radius: 100%;
    height: 40px;
    width: 40px;
    font-size: 1.6rem;
    line-height: 32px;
    color: #3d90d8;
    font-weight: 900;
    text-align: center;
}
.qtyplus {
    position: absolute;
    left: auto;
    right: -49px;
    top: 41%;
    border: 2px solid #3d90d8;
    box-shadow: 0px 0px 6px #33333338;
    border-radius: 100%;
    height: 40px;
    width: 40px;
    font-size: 1.6rem;
    line-height: 32px;
    color: #3d90d8;
    font-weight: 900;
    text-align: center;
}

/* MOBILE STYLES */
@media screen and (max-width: 450px) {
  .food-hero {
    padding: 58px 0 128px 0;
  }
  .food-item {
    margin: 10px 0;
  }
  .food-hero h1 {
    font-size:3rem;
    line-height:2.8rem;
  }
  .food-hero h2 {
    font-size: 1rem;
    letter-spacing: 2px;
    line-height: 1.3rem;
    max-width: 240px;
    margin: 0 auto;
  }
}